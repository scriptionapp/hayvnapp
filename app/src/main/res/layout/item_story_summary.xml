<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/storycard_border"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="2dp"
    android:paddingLeft="20dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/event_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_list_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:textColor="@color/font"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_of_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_attachment"
            android:text=""
            android:drawablePadding="10dp"
            android:paddingStart="5dp"
            android:textSize="16sp"
            android:paddingEnd="5dp"
            android:layout_weight="1"
            android:textColor="#CFCFCF" />

        <TextView
            android:id="@+id/date_of_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="5dp"
            android:textSize="16sp"
            android:paddingEnd="5dp"
            android:layout_weight="1"
            android:textColor="#CFCFCF" />

    </LinearLayout>
</LinearLayout>