<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/patient_photo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:contentDescription="@string/uploaded_image_thumbnail" />

        <Button
            android:id="@+id/change_patient_photo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/change_patient_photo"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_gravity="center_vertical"
            android:textStyle="normal"
            android:background="@drawable/ic_btn_nobg_palegreen"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>