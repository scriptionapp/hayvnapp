<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/treat_drug_name"/>
        <EditText
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5pt"
            android:paddingRight="5pt"
            android:background="@drawable/textinput_border"
            android:id="@+id/treat_drug_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/treat_dosage"/>
        <EditText
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5pt"
            android:paddingRight="5pt"
            android:background="@drawable/textinput_border"
            android:id="@+id/treat_drug_dose"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/treat_date_start"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/treat_start_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textinput_border"
                android:ems="12"
                android:padding="2pt"
                android:layout_marginRight="50dp"
                android:hint="@string/date_mand" />

            <com.hayvn.hayvnapp.Helper.DatePickerExt
                android:id="@+id/treat_start_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/treat_start_edittext"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/treat_cal_start_button"
                android:background="@color/cardview_light_background"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_today_black" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/treat_date_end"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/treat_end_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textinput_border"
                android:ems="12"
                android:padding="2pt"
                android:layout_marginRight="50dp"
                android:hint="@string/date_mand" />

            <com.hayvn.hayvnapp.Helper.DatePickerExt
                android:id="@+id/treat_end_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/treat_end_edittext"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/treat_cal_end_button"
                android:background="@color/cardview_light_background"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_today_black" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/treat_comments"/>
        <EditText
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5pt"
            android:paddingRight="5pt"
            android:minLines="2"
            android:maxLines="5"
            android:background="@drawable/textinput_border"
            android:id="@+id/treat_comments"/>


</LinearLayout>